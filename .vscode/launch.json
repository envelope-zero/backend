{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API (SQLite)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "GIN_MODE": "debug"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Run API (postgresql in compose)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "LOG_LEVEL": "debug",
        "DB_HOST": "localhost",
        "DB_USER": "ez",
        "DB_PASSWORD": "thisisunsafe",
        "DB_NAME": "postgres"
      },
      "console": "integratedTerminal"
    }
  ]
}
